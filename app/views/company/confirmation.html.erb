<!doctype html>
<html lang="ja">
  <head></head>
  <body>
    <div class="container">
      <h3>Beginner's建築〜ビギケン〜</h3>
    </div>
    <div class="container text-center bg-success">
      <h4>内容確認ページ</h4>
    </div>

    <%= form_tag("/company/form_create", {multipart: true}) do %>
    <div class="container">

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※求人登録地</p>
        </div>
        <div class="col-md-10">
          <%= @company_form.japan %>
          <%= hidden_field_tag :japan, @company_form.japan %>
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※勤務地</p>
        </div>
        <div class="col-md-10">
          <%= @company_form.title %>
          <%= hidden_field_tag :title, @company_form.title %>
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※勤務形態</p>
        </div>
        <div class="col-md-10 list-inline">
          <ul class="px-0">
            <%= @company_form.work_type.join(" , ") %>
            <%= hidden_field_tag :work_type, @company_form.work_type %>
          </ul>
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※キャッチコピー</p>
        </div>
        <div class="col-md-10">
          <%= @company_form.catchcopy %>
          <%= hidden_field_tag :catchcopy, @company_form.catchcopy %>
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※職種</p>
        </div>
        <div class="col-md-10 list-inline">
          <ul class="px-0">
            <%= @company_form.work_list.join(" , ") %>
            <%= hidden_field_tag :work_list, @company_form.work_list %>
          </div>
        </div>

        <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
          <div class="col-md-2 pl-5">
            <p>※レベル設定</p>
          </div>
          <div class="col-md-10 list-inline">
            <ul class="px-0">
              <%= @company_form.level_list.join(" , ") %>
              <%= hidden_field_tag :level_list, @company_form.level_list %>
            </ul>
          </div>
        </div>

        <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
          <div class="col-md-2 pl-5">
            <p>※給与</p>
          </div>
          <div class="col-md-10">
            <%= @company_form.money %>
            <%= hidden_field_tag :money, @company_form.money %>
          </div>
        </div>

        <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
          <div class="col-md-2 pl-5">
            <p>※その他支給</p>
          </div>
          <div class="col-md-10">
            <%= @company_form.otherwise_money %>
            <%= hidden_field_tag :otherwise_money, @company_form.otherwise_money %>
          </div>
        </div>

        <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
          <div class="col-md-2 pl-5">
            <p>※勤務期間</p>
          </div>
          <div class="col-md-10">
            <%= @company_form.period %>
            <%= hidden_field_tag :period, @company_form.period %>
          </div>
        </div>

        <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
          <div class="col-md-2 pl-5">
            <p>※仕事内容</p>
          </div>
          <div class="col-md-10">
            <p class="w-75"><%= @company_form.work_content %></p>
            <%= hidden_field_tag :work_content, @company_form.work_content %>
          </div>
        </div>

        <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
          <div class="col-md-2 pl-5">
            <p>※その他</p>
          </div>
          <div class="col-md-10">
            <%= @company_form.otherwise %>
            <%= hidden_field_tag :otherwise, @company_form.otherwise %>
          </div>
        </div>

        <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
          <div class="col-md-2 pl-5">
            <p class="">現場風景</p>
          </div>
          <div class="col-md-10 pb-2">
            <% if @company_form.image %>
              <%= image_tag(@company_form.image.url, :width => "300") %>
              <%= hidden_field_tag :"cache[image]", @company_form.image.cache_name %>
            <% end %>
          </div>
        </div>

        <div class="row">
          <div class="col-md-2"></div>
          <div class="col-md-4 text-center py-5">
            <button class="btn btn-primary btn-lg text-center" type="submit">登録完了</button>
          </div>
          <div class="col-md-4 text-center py-5">
            <button class="btn btn-danger btn-lg text-center" type="submit" formaction="return">戻る</button>
          </div>
          <div class="col-md-2"></div>
        </div>
      </div>
    <% end %>

    <footer class="text-center mt-5 pt-5">
      <p>Beginner's建築〜ビギケン〜</p>
    </footer>
  </body>
</html>
