<!doctype html>
<html lang="ja">
  <head></head>
  <body>
    <% if @company_form_ud.errors.full_messages %>
      <% @company_form_ud.errors.full_messages.each do |message| %>
        <div class="bg-danger text-center"><%= message %></div>
      <% end %>
    <% end %>

    <div class="container">
      <h3>Beginner's建築〜ビギケン〜</h3>
    </div>
    <div class="container text-center bg-success">
      <h4>内容変更ページ</h4>
    </div>

    <%= form_tag("/company/#{@company_form.id}/confirm_ud", {multipart: true}) do %>
    <div class="container">
      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※求人登録地</p>
        </div>
        <div class="col-md-10">
          <%= @company_form.japan %>
          <p class="mt-2 mb-1">※求人登録地は変更出来ません。</p>
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※勤務地</p>
        </div>
        <div class="col-md-10">
          <input type="text" class="col-md-5" value="<%= @company_form.title %>" name="title">
          <p class="mt-2 mb-1">※現場名を記述してください</p>
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※勤務形態</p>
        </div>
        <div class="col-md-10 list-inline">
          <ul class="px-0">
            <% if @company_form.work_type.include?("正社員") %>
              <li class="list-inline-item"><%= check_box_tag "work_type[]", "正社員", :checked=>'checked' %>正社員</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "work_type[]", "正社員" %>正社員</li>
            <% end %>

            <% if @company_form.work_type.include?("アルバイト") %>
              <li class="list-inline-item"><%= check_box_tag "work_type[]", "アルバイト", :checked=>'checked' %>アルバイト</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "work_type[]", "アルバイト" %>アルバイト</li>
            <% end %>

            <% if @company_form.work_type.include?("期間限定") %>
              <li class="list-inline-item"><%= check_box_tag "work_type[]", "期間限定", :checked=>'checked' %>期間限定</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "work_type[]", "期間限定" %>期間限定</li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※キャッチコピー</p>
        </div>
        <div class="col-md-10">
          <input type="text" class="col-md-5" value="<%= @company_form.catchcopy %>" name="catchcopy">
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※職種</p>
        </div>
        <div class="col-md-10 list-inline">
          <ul class="px-0">
            <% if @company_form.work_list.include?("大工工事") %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "大工工事", :checked=>'checked' %>大工工事</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "大工工事" %>大工工事</li>
            <% end %>

            <% if @company_form.work_list.include?("左官工事") %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "左官工事", :checked=>'checked' %>左官工事</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "左官工事" %>左官工事</li>
            <% end %>

            <% if @company_form.work_list.include?("土木工事") %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "土木工事", :checked=>'checked' %>土木工事</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "土木工事" %>土木工事</li>
            <% end %>

            <% if @company_form.work_list.include?("電気工事") %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "電気工事", :checked=>'checked' %>電気工事</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "電気工事" %>電気工事</li>
            <% end %>

            <% if @company_form.work_list.include?("内装仕上工事") %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "内装仕上工事", :checked=>'checked' %>内装仕上工事</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "内装仕上工事" %>内装仕上工事</li>
            <% end %>

            <% if @company_form.work_list.include?("給排水工事") %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "給排水工事", :checked=>'checked' %>給排水工事</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "work_list[]", "給排水工事" %>給排水工事</li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※レベル設定</p>
        </div>
        <div class="col-md-10 list-inline">
          <ul class="px-0">
            <% if @company_form.level_list.include?("レベル1") %>
              <li class="list-inline-item"><%= check_box_tag "level_list[]", "レベル1", :checked=>'checked' %>レベル1</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "level_list[]", "レベル1" %>レベル1</li>
            <% end %>

            <% if @company_form.level_list.include?("レベル2") %>
              <li class="list-inline-item"><%= check_box_tag "level_list[]", "レベル2", :checked=>'checked' %>レベル2</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "level_list[]", "レベル2" %>レベル2</li>
            <% end %>

            <% if @company_form.level_list.include?("レベル3") %>
              <li class="list-inline-item"><%= check_box_tag "level_list[]", "レベル3", :checked=>'checked' %>レベル3</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "level_list[]", "レベル3" %>レベル3</li>
            <% end %>

            <% if @company_form.level_list.include?("レベル4") %>
              <li class="list-inline-item"><%= check_box_tag "level_list[]", "レベル4", :checked=>'checked' %>レベル4</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "level_list[]", "レベル4" %>レベル4</li>
            <% end %>

            <% if @company_form.level_list.include?("レベル5") %>
              <li class="list-inline-item"><%= check_box_tag "level_list[]", "レベル5", :checked=>'checked' %>レベル5</li>
            <% else %>
              <li class="list-inline-item"><%= check_box_tag "level_list[]", "レベル5" %>レベル5</li>
            <% end %>
          </ul>
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※給与</p>
        </div>
        <div class="col-md-10">
          <input type="text" class="col-md-5" value="<%= @company_form.money %>" name="money">
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※その他支給</p>
        </div>
        <div class="col-md-10">
          <input type="text" class="col-md-5" value="<%= @company_form.otherwise_money %>" name="otherwise_money">
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※勤務期間</p>
        </div>
        <div class="col-md-10">
          <input type="text" class="col-md-5" value="<%= @company_form.period %>" name="period">
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※仕事内容</p>
        </div>
        <div class="col-md-10">
          <textarea rows="8" cols="70" name="work_content"><%= @company_form.work_content %></textarea>
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>※その他</p>
        </div>
        <div class="col-md-10">
          <textarea rows="8" cols="70" name="otherwise"><%= @company_form.otherwise %></textarea>
        </div>
      </div>

      <div class="row mt-5 pt-3 pb-2 border-top border-bottom">
        <div class="col-md-2 pl-5">
          <p>現場風景</p>
        </div>
        <div class="col-md-10 pb-2">
          <%= image_tag(@company_form.image.url, :width => "300") %>
          <%= hidden_field_tag :"cache[image]", @company_form.image.cache_name %>
          <input name="image" type="file">
        </div>
      </div>

      <div class="text-center mt-3 pt-3">
        <button class="btn btn-primary btn-lg text-center" type="submit">確認ページへ</button>
      </div>
    </div>
  <% end %>

  <footer class="text-center mt-5 pt-5">
    <p>Beginner's建築〜ビギケン〜</p>
  </footer>
</body>
</html>
