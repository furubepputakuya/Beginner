<!doctype html>
<html lang="ja">
  <head></head>
  <body>
    <div class="container">
      <h3>Beginner's建築〜ビギケン〜</h3>
    </div>
    <div class="container text-center bg-success">
      <h4>応募者一覧</h4>
    </div>
    <% @company_entrys.each do |company_entry| %>
      <% @user = User.find_by(id: company_entry.user_id) %>
        <div class="container">
          <div class="row text-center">
            <div class="col-md-2"></div>
            <div class="col-md-8 mb-3">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th scope="col" colspan="2">応募者情報</th>
                  </tr>
                </thead>
                <tbody>
                  <tr>
                    <th scope="row">名前</th>
                    <td width="500"><%= @user.name %></td>
                  </tr>
                  <tr>
                    <th scope="row">メールアドレス</th>
                    <td width="500"><%= @user.email %></td>
                  </tr>
                </tbody>
              </table>
            </div>
            <div class="col-md-2"></div>
          </div>
        </div>
      <% end %>
      <footer class="text-center mt-3 pt-3">
        <p>Beginner's建築〜ビギケン〜</p>
      </footer>
    </body>
  </html>
